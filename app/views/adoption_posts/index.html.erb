<div class="card mx-5 my-5">
  <div class ="card-header">
    <div class="d-flex align-items-center">
      <div class="me-auto">
          <img src="<%= asset_path('adoptionicon.png') %>" alt="Image" style="width: 100px; height: 100px; border-radius: 10%; margin-right: 15px;">
        </div>
        <div class="col-md"> 
          <h1 style="margin: 0;" class="text-start"> Adopciones </h1>
        </div> 
      <div>
        <% if user_signed_in? %>
          <%= link_to new_adoption_post_path, class: "btn btn-primary btn-lg" do %>
            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-chat-left-fill" viewBox="0 0 16 16">
              <path d="M2 0a2 2 0 0 0-2 2v12.793a.5.5 0 0 0 .854.353l2.853-2.853A1 1 0 0 1 4.414 12H14a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z"/>
            </svg>
            Nuevo Post
          <% end %>
        <% end %>
      </div>
    </div>
  </div>  
  <div class="card-body">
    <div id="adoption_posts">
      <% @adoption_posts.order(created_at: :desc).each do |adoption_post| %>
        <div class="mb-3">
        <%= render adoption_post %>
        </div>
      <% end %>
  </div>
</div>
