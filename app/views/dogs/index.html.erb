<div class="d-flex align-items-center gap-1">
  <div class="me-auto">
    <% if current_user == @user %>
      <h1>Mis mascotas</h1>
    <% else %>
      <h1>Mascotas de <%= @user.first_name %> <%= @user.last_name %></h1>
    <% end %>
  </div>
  <% if current_user != @user %>
    <%= link_to "Volver al cliente", user_path(@user), class: "btn btn-secondary btn-lg" %>
  <% end %>
  <% if current_user.admin? %>
    <%= link_to new_user_dog_path(@user.id), class: "btn btn-primary btn-lg" do %>
      <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z"/>
      </svg>
      Agregar mascota
    <% end %>
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-hover align-middle caption-top">
    <caption>Total: <%= @user.dogs.count %></caption>
    <thead>
      <tr class="table-secondary">
        <th scope="col">Nombre</th>
        <th scope="col">Apellido</th>
        <th scope="col">Raza</th>
        <th scope="col">Color</th>
        <th scope="col">Sexo</th>
        <th scope="col">Cumplea√±os</th>
        <th scope="col">Acciones</th>
      </tr>
    </thead>

    <tbody>
      <div id="dogs">
        <% @dogs.each do |dog| %>
          <tr scope="row">
            <td class="<%= dog.state? ? '' : 'text-body-tertiary' %>"><%= dog.first_name %></td>
            <td class="<%= dog.state? ? '' : 'text-body-tertiary' %>"><%= dog.last_name %></td>
            <td class="<%= dog.state? ? '' : 'text-body-tertiary' %>"><%= t("activerecord.attributes.dog.breeds.#{dog.breed}").humanize %></td>
            <td class="<%= dog.state? ? '' : 'text-body-tertiary' %>"><%= dog.color %></td>
            <td class="<%= dog.state? ? '' : 'text-body-tertiary' %>"><%= t("activerecord.attributes.dog.sexes.#{dog.sex}").humanize %></td>
            <td class="<%= dog.state? ? '' : 'text-body-tertiary' %>"><%= dog.birthday %></td>
            <td class="d-flex gap-2">
              <%= link_to dog, class: "btn btn-info" do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                  <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
                </svg>
              <% end %>
              <% if current_user.admin? %>
                <%= link_to edit_dog_path(dog), class: "btn btn-primary #{dog.state ? '' : 'disabled'}" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                    <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"/>
                  </svg>
                <% end %>
                <%= button_to toggle_state_dog_path(dog), method: :patch, class: "btn btn-#{dog.state ? 'danger' : 'success'}" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-clockwise" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M8 3a5 5 0 1 0 4.546 2.914.5.5 0 0 1 .908-.417A6 6 0 1 1 8 2v1z"/>
                    <path d="M8 4.466V.534a.25.25 0 0 1 .41-.192l2.36 1.966c.12.1.12.284 0 .384L8.41 4.658A.25.25 0 0 1 8 4.466z"/>
                  </svg>
                <% end %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </div>
    </tbody>
  </table>
</div>