<h1>Editar mascota</h1>

<%= render "form", dog: @dog %>

<br>

<div class="d-flex gap-2">
  <%= link_to "Volver a la mascota", dog_path(@dog), class: "btn btn-info" %>
  <% if current_user == @dog.user %>
    <%= link_to "Volver a mis mascotas", user_dogs_path(@dog.user), class: "btn btn-secondary" %>
  <% else %>
    <%= link_to "Volver a las mascotas del cliente", user_dogs_path(@dog.user), class: "btn btn-secondary" %>
  <% end %>
</div>
