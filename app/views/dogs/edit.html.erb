<div class="card mx-5 my-5">
  <div class ="card-header">
    <div class="d-flex align-items-center">
      <div class="me-auto">
          <img src="<%= asset_path('golden.png') %>" alt="Image" style="width: 100px; height: 100px; border-radius: 10%; margin-right: 15px;">
        </div>
        <div class="col-md"> 
          <h1 style="margin: 0;" class="text-start"> Editar Mascota </h1>
        </div>
        <div>  
        <%= link_to "Volver a la mascota", dog_path(@dog), class: "btn btn-info" %>
        <% if current_user == @dog.user %>
          <%= link_to "Volver a mis mascotas", user_dogs_path(@dog.user), class: "btn btn-secondary" %>
        <% else %>
          <%= link_to "Volver a las mascotas del cliente", user_dogs_path(@dog.user), class: "btn btn-secondary" %>
        <% end %>
      </div>
    </div>
  </div>  
  <div class="card-body">
    <%= render "form", dog: @dog %>
  </div>
</div>