<div id="<%= dom_id turn_form %>">

  <div class="card mb-2 shadow-sm">
    <div class="card-body">
      <% if current_user.admin? %>
        <div class="row">
            <div class="col-sm-3">
              <p class="mb-0">Cliente</p>
            </div>
            <div class="col-sm-9">
              <p class="text-muted mb-0"><%= turn_form.user.first_name %> <%= turn_form.user.last_name %></p>
            </div>
        </div>
        <hr>
      <% end %>
      <div class="row">
        <div class="col-sm-3">
          <p class="mb-0">Perro</p>
        </div>
        <div class="col-sm-9">
          <p class="text-muted mb-0"><%= turn_form.dog.first_name if turn_form.dog.present? %></p>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-sm-3">
          <p class="mb-0">Fecha de consulta:</p>
        </div>
        <div class="col-sm-9">
          <p class="text-muted mb-0"><%= turn_form.dateCons %></p>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-sm-3">
          <p class="mb-0">Banda horaria</p>
        </div>
        <div class="col-sm-9">
          <p class="text-muted mb-0"><%= t("activerecord.attributes.turn_form.schedules.#{turn_form.schedule}").humanize %></p>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-sm-3">
          <p class="mb-0">Servicios: </p>
        </div>
        <div class="col-sm-9">
          <p class="text-muted mb-0"><%= turn_form.servicesCons %></p>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-sm-3">
          <p class="mb-0">Descripci√≥n: </p>
        </div>
        <div class="col-sm-9">
          <p class="text-muted mb-0"><%= turn_form.descriptionCons %></p>
        </div>
      </div>
    </div>
  </div>
</div>
