<div id="<%= dom_id dog_walker %>">
  <div class="row mx-5">
    <div class="card mb-3 shadow-sm">
      <div class="row card-body text-center">
        <div class="col-lg-4">
          <div class="mt-0 mb-1">
            <%= image_tag url_for(dog_walker.photo), size: "16*16", class: "img-fluid rounded", style: "max-height: 200px;" %>
          </div>
          <div class="d-flex justify-content-center mb-2">
            <% if user_signed_in? && current_user.admin? %>
              <%= link_to edit_dog_walker_path(dog_walker), class: "btn btn-outline-primary me-1 mt-3" do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                  <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"/>
                </svg>
              <% end %>
              <%= link_to dog_walker, data: { turbo_method: :delete, turbo_confirm: "¿Estás seguro?" }, class: "btn btn-danger mt-3" do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                  <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z"/>
                </svg>
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="row">
            <div class="col-sm-3">
              <p class="mb-0">Nombre completo</p>
            </div>
            <div class="col-sm-9">
              <p class="text-muted mb-0"><%= dog_walker.name %> <%= dog_walker.lastname %></p>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <p class="mb-0">Zona de trabajo</p>
            </div>
            <div class="col-sm-9">
              <p class="text-muted mb-0"><%= dog_walker.workplace %></p>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <p class="mb-0">Servicio</p>
            </div>
            <div class="col-sm-9">
              <p class="text-muted mb-0"><%= dog_walker.service %></p>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <p class="mb-0">Contacto</p>
            </div>
            <div class="col-sm-9">
              <p class="text-muted mb-0"><%= dog_walker.contact  %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
