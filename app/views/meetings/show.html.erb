<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= render @meeting %>
      <div class="d-flex mt-3 gap-2 justify-content-center">
        <% unwanted_names = ['Vacunacion', 'Turno'] %>
        <% if user_signed_in? && current_user.admin? && !unwanted_names.include?(@meeting.name) %>
          <%= link_to "Editar este evento", edit_meeting_path(@meeting), class: "btn btn-primary" %>
          <%= button_to "Eliminar este evento", @meeting, method: :delete, class: "btn btn-danger" %>
        <% end %>
        <%= link_to "Volver al calendario", meetings_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>