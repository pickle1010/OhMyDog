<%= form_with(model: meeting) do |form| %>
  <% if meeting.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(meeting.errors.count, "error") %> prohibited this meeting from being saved:</h2>

      <ul>
        <% meeting.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row mb-3">
    <%= form.label :name, t("activerecord.attributes.meeting.name").humanize, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
        <div class="col-sm-10">
          <% if form.object.new_record? %> 
            <%= form.select(:name, [['', nil]] + Meeting.names.keys.map { |name| [t("activerecord.attributes.meeting.names.#{name}").humanize, name] },
                  { selected: nil },
                  { class: 'form-select' }) %>
            <% else %>} 
              <%= form.select(:name, Meeting.names.keys.map { |name| [t("activerecord.attributes.meeting.names.#{name}").humanize, name] }, {selected: @meeting.new_record? }, { class: 'form-select'}) %>
          <% end %>
    </div>
  </div>

  <div>
    <%= form.label :start_time, style: "display: block" %>
    <%= form.date_field :start_time %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
