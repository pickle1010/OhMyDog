<div class="card mx-5 my-5">
  <div class ="card-header">
    <div class="d-flex align-items-center">
      <div class="me-auto">
          <img src="<%= asset_path('userveterinary.png') %>" alt="Image" style="width: 100px; height: 100px; border-radius: 10%; margin-right: 15px;">
        </div>
        <div class="col-md"> 
          <h1 style="margin: 0;" class="text-start"> Editar Cliente </h1>
        </div>
        <div>  
        <%= link_to "Volver al cliente", user_path(@user), class: "btn btn-info" %>
        <%= link_to "Volver a tabla de clientes", users_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>  
  <div class="card-body">
    <%= render "form", user: @user %>
  </div>
</div>