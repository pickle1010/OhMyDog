<body style="background-image: url('<%= asset_path('dogsbackground1.png') %>'); background-size: fixed;">
  <% unless @dog.state %>
    <div class="alert alert-warning text-center" role="alert" id="warning-message">
      Este perro está deshabilitado
    </div>
  <% end %>
    
  <div class="card mx-5 my-5">
    <div class ="card-header">
      <div class="d-flex align-items-center gap-1">
        <div class="me-auto">
          <img src="<%= asset_path('healthicon.png') %>" alt="Image" style="width: 100px; height: 100px; border-radius: 10%; margin-right: 15px;">
            </div>
            <div class="col-md">
              <h1>Historia clínica de <%= @dog.first_name %></h1>
            </div>
        <%= link_to "Volver al perro", dog_path(@dog), class: "btn btn-secondary btn-lg" %>
        <% if current_user.admin? %>
          <%= link_to new_dog_clinic_dog_path(@dog), class: "btn btn-primary btn-lg #{@dog.state ? '' : 'disabled'}" do %>
            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
              <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z"/>
            </svg>
            Agregar entrada
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="card-body">
      <div class="mt-4">
        <% @clinic_dogs.each do |clinic_dog| %>
          <div class="accordion" id="accordion">
            <div class="accordion-item">
              <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= clinic_dog.id%>" aria-expanded="true" aria-controls="collapse<% clinic_dog.id%>">
                  Fecha: <%= clinic_dog.dateclinic %>          
                </button>
              </h2>
              <div id="collapse<%= clinic_dog.id %>" class="accordion-collapse collapse" aria-labelledby="heading<%= clinic_dog.id %>" data-bs-parent="#accordion" >
                <div class="accordion-body">
                  <div class="card">
                    <div class="card-body">
                      <div class="text-end">
                        <%= link_to "Ver", clinic_dog_path(clinic_dog), class: "btn btn-primary" %>
                        <% if current_user.admin? && @dog.state %>
                          <%= link_to "Editar", edit_clinic_dog_path(clinic_dog), class: "btn btn-primary ms-1"%>
                        <% end %>
                      </div>
                      <% unless clinic_dog.rabies_applied || clinic_dog.inmunological_applied %>
                        <hr>
                        <div class="row">
                          <div class="col-sm-6">
                            <p class="mb-0">Vacunas aplicadas:</p>
                          </div>
                          <div class="col-sm-6">
                            <p class="text-muted mb-0">Ninguna</p>
                          </div>
                        </div>
                      <% end %>
                      <% if clinic_dog.rabies_dosage.present? %>
                        <hr>
                        <div class="row">
                          <div class="col-sm-6">
                            <p class="mb-0">Antirrábica:</p>
                          </div>
                          <div class="col-sm-6">
                            <p class="text-muted mb-0">Lote: <%= clinic_dog.rabies_batch %>, Dosis: <%= clinic_dog.rabies_dosage %> mg</p>
                          </div>
                        </div>
                      <% end %>
                      <% if clinic_dog.inmunological_dosage.present? %>
                        <hr>
                        <div class="row">
                          <div class="col-sm-6">
                            <p class="mb-0">Inmunológica:</p>
                          </div>
                          <div class="col-sm-6">
                            <p class="text-muted mb-0">Lote: <%= clinic_dog.inmunological_batch %>, Dosis: <%= clinic_dog.inmunological_dosage %> mg</p>
                          </div>
                        </div>
                      <% end %>
                      <hr>
                      <div class="row">
                        <div class="col-sm-6">
                          <p class="mb-0">Descripción:</p>
                        </div>
                        <div class="col-sm-6">
                          <p class="text-muted mb-0"><%= clinic_dog.description %></p>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>  
  </div>    
</body>