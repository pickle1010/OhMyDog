<h2>Creá tu cuenta</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="row mb-3 g-3">
    <div class="field col">
      <%= f.label :first_name, "Nombre", class: "form-label" %><br />
      <%= f.text_field :first_name, autofocus: true, autocomplete: "given-name", class: "form-control" %>
    </div>
    <div class="field col">
      <%= f.label :last_name, "Apellidos", class: "form-label" %><br />
      <%= f.text_field :last_name, autofocus: true, autocomplete: "family-name", class: "form-control" %>
    </div>
  </div>

  <div class="field mb-3">
    <%= f.label :dni, "DNI", class: "form-label" %><br />
    <%= f.number_field :dni, autofocus: true, class: "form-control" %>
  </div>

  <div class="field mb-3">
    <%= f.label :email, "Correo electrónico", class: "form-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="field mb-3">
    <%= f.label :address, "Dirección", class: "form-label" %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "address-line1", class: "form-control" %>
  </div>

  <div class="field mb-3">
    <%= f.label :password, "Contraseña nueva", class: "form-label" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="field mb-3">
    <%= f.label :password_confirmation, "Confirmá la nueva contraseña", class: "form-label" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="actions mb-4">
    <%= f.submit "Crear cuenta", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
