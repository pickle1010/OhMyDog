<div class="card mx-5 my-5">
  <div class ="card-header">
    <div class="d-flex align-items-center">
      <div class="me-auto"> 
          <h1 style="margin: 0;" class="text-start"> Cambia tu contraseña </h1>
      </div>
    </div>
  </div>  
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>
      
      <div class="field mb-3">
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", placeholder: "Contraseña nueva" %>
        <% if @minimum_password_length %>
        <p class="form-text">La contraseña debe contener <%= @minimum_password_length %> caracteres como mínimo</p>
      <% end %>
      </div>

      <div class="field mb-3">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirma la nueva contraseña" %>
      </div>

      <div class="actions mb-3">
        <%= f.submit "Cambiar mi contraseña", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>  