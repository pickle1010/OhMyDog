<div class="card mx-5 my-5">
  <div class ="card-header">
    <div class="d-flex align-items-center">
      <div class="me-auto">
          <img src="<%= asset_path('donationdog.png') %>" alt="Image" style="width: 100px; height: 100px; border-radius: 10%; margin-right: 15px;">
        </div> 
        <div class="col-md"> 
          <h1 style="margin: 0;" class="text-start"> Historial de Donaciones </h1>
        </div> 
      <div>
        <%= link_to "Hacer una Donacion", new_credit_card_path, class: "btn btn-primary my-2" %>
      </div>
    </div>
  </div>  
  <div class="card-body">
    <div id="credit_cards">
      <% @credit_cards.each do |credit_card| %>
        <%= render credit_card %>
      <% end %>
  </div>
</div>