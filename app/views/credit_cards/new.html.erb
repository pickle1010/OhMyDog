<div class="card mx-5 my-5">
  <div class ="card-header">
    <div class="d-flex align-items-center">
      <div class="me-auto">
          <img src="<%= asset_path('donationdog.png') %>" alt="Image" style="width: 100px; height: 100px; border-radius: 10%; margin-right: 15px;">
        </div>
        <div class="col-md"> 
          <h1 style="margin: 0;" class="text-start"> Realizar una Donacion </h1>
        </div> 
      <div>
        <%= link_to "Ver mis donaciones", credit_cards_path, class: "btn btn-primary my-3 mx-5" %>
      </div>
    </div>
  </div>  
  <div class="card-body">
    <%= render "form", credit_card: @credit_card %>
  </div>
</div>
