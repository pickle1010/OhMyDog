<div class="card">
  <div class="card-body">
    <%= form_with(model: credit_card) do |form| %>
      <% if credit_card.errors.any? %>
        <div class="alert alert-danger">
          <h2><%= pluralize(credit_card.errors.count, "error") %> prohibited this credit_card from being saved:</h2>

          <ul>
            <% credit_card.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="row">
          <div class="col-md-6 text-center">
            <div class="mb-3">
              <%= image_tag('visamaster.png', class: 'icon-image') %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="mb-3">
              <%= form.label :card_type, class: "form-label" %>
              <%= form.select(:card_type, [['Visa', 'visa'], ['Mastercard', 'mastercard']], { include_blank: false }, { class: 'form-select' }) %> 
            </div>
          </div>   
          <div class="col-md-6 text-center">
            <div class="mb-3">
              <%= image_tag('credit-card-front.png', class: 'icon-image') %>
            </div>
          </div>  
          <div class="col-md-6">
            <div class="mb-3">
              <%= form.label :number, class: "form-label" %>
              <%= form.text_field :number, class: "form-control" %> 
            </div>
          </div>  

          <div class="col-md-6 text-center">
            <div class="mb-3">
              <%= image_tag('credit-card-back.png', class: 'icon-image') %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="mb-3">
              <%= form.label :cvv, class: "form-label" %>
              <%= form.number_field :cvv, class: "form-control" %>
            </div>
          </div>

         <div class="col-md-6">
            <div class="mb-3">
              <%= form.label :expiration_month, class: "form-label" %>
              <%= form.number_field :expiration_month, class: "form-control" %>
            </div>
          </div>
            
          <div class="col-md-6">
            <div class="mb-3">
              <%= form.label :expiration_year, class: "form-label" %>
              <%= form.number_field :expiration_year, class: "form-control" %>
            </div>
          </div>

          <div class="col-md-6">
            <div class="mb-3">
              <%= form.label :name, class: "form-label" %>
              <%= form.text_field :name, class: "form-control" %>
            </div>
          </div>

          <div class="col-md-6">
            <div class="mb-3">
              <%= form.label :last_name, class: "form-label" %>
              <%= form.text_field :last_name, class: "form-control" %>
            </div>
          </div>

          <div class="mb-3">
            <%= form.label :amount, class: "form-label" %>
            <%= form.number_field :amount, class: "form-control" %>
          </div>

          <div>
            <%= form.submit class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
